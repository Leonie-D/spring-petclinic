pipeline {
    agent any
    stages {
        stage ('Download file') {
            steps {
                rtDownload (
                    // Obtain an Artifactory server instance, defined in Jenkins --> Manage Jenkins --> Configure System:
                    serverId: 'leonie',
                    spec: """{
                            "files": [
                                    {
                                        "pattern": "default-maven-local/*.jar"
                                    }
                                ]
                            }"""
                )
            }
        }
        stage('Deploy') {
            steps([$class: 'BapSshPromotionPublisherPlugin']) {
                sshPublisher(
                    continueOnError: false, failOnError: true,
                    publishers: [
                        sshPublisherDesc(
                            configName: "VM AWS",
                            verbose: true,
                            transfers: [
                                sshTransfer(
                                    sourceFiles: "artifacts/*.jar",
                                    removePrefix: "artifacts",
                                    remoteDirectory: "/",
                                    execCommand: "sudo systemctl stop petclinic@group2.service && sudo systemctl start petclinic@group2.service"
                                )
                            ]
                        )
                    ]
                )
            }
        }
    }
}
