pipeline {
    agent any
    stages {
        stage ('Download file') {
            steps {
                rtDownload (
                    // Obtain an Artifactory server instance, defined in Jenkins --> Manage Jenkins --> Configure System:
                    serverId: 'leonie',
                    spec: """{
                            "files": [
                                    {
                                        "pattern": "default-maven-local/jenkins/petclinic-${GIT_COMMIT.substring(0,8)}.jar",
                                        "target": "jenkins/petclinic.jar"
                                    }
                                ]
                            }"""
                )
            }
        }
        stage('Deploy') {
            steps([$class: 'BapSshPromotionPublisherPlugin']) {
                sshPublisher(
                    continueOnError: false, failOnError: true,
                    publishers: [
                        sshPublisherDesc(
                            configName: "VM AWS",
                            verbose: true,
                            transfers: [
                                sshTransfer(
                                    sourceFiles: "*.jar",
                                    execCommand: "sudo systemctl start petclinic@group2.service && sudo systemctl start petclinic@group2.service"
                                )
                            ]
                        )
                    ]
                )
            }
        }
        //stage('Cleanup Workspace') { 
        //    steps {
        //        cleanWs()
        //        sh """
        //        echo "Cleaned Up Workspace For Project"
        //        """
        //    }
        //}
    }
}
