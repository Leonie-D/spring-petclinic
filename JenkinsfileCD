                    spec: """{
                            "files": [
                                    {
                                        "pattern": "spring-petclinic-2.5.0-SNAPSHOT.jar",
                                        "target": "default-maven-local",
                                    }
                                ]
                            }"""
                )
            }
        }
    }
}
